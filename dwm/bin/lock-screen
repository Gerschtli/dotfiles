#!/usr/bin/env bash

has_xbacklight() {
    hash xbacklight > /dev/null 2>&1
}

main() {
    local backlight=
    has_xbacklight && backlight=$(xbacklight)
    has_xbacklight && xbacklight "=5" &
    slock
    has_xbacklight && xbacklight "=${backlight}"
    battery-watcher reset 2> /dev/null
}

main
