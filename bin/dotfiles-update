#!/bin/bash

print() {
    printf "[\033[00;34mINFO\033[0m] ${1}\n"
}

indent() {
    while IFS= read -r line; do
        printf "   ==> %s\n" "${line}"
    done < <($@ 2>&1)
}

pull() {
    print "git fetch --prune ..."
    indent git fetch --prune

    if [[ $(git rev-parse --abbrev-ref HEAD) != "master" ]]; then
        print "git checkout master ..."
        indent git checkout master
    fi

    if [[ $(git diff --name-only) != "" ]]; then
        local stash=true
        print "git stash ..."
        indent git stash
    fi

    print "git rebase -n origin/master ..."
    indent git rebase -n origin/master

    if [[ ! -z "${stash}" ]]; then
        print "git stash pop ..."
        indent git -c color.status=always stash pop
    fi
}

set -e

pushd "$(dirname "$0")/.." 1> /dev/null

if [[ -z "${1}" ]]; then
    print "========= DOTFILES ========="
    pull

    if [[ -d "ssh" ]]; then
        pushd "ssh" 1> /dev/null
        echo
        print "============ SSH ==========="
        pull
        popd 1> /dev/null
    fi
fi

echo
print "========= BOOTSTRAP ========"
indent ./bootstrap.sh

popd 1> /dev/null

exit 0
