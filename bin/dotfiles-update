#!/bin/bash

print() {
    printf "[\033[00;34mINFO\033[0m] ${1}\n"
}

pull() {
    print "git fetch --prune ..."
    git fetch --prune

    print "git checkout master ..."
    git checkout master

    if [[ $(git status --porcelain) != "" ]]; then
        local stash=true
        print "git stash ..."
        git stash
    fi

    print "git rebase -n origin/master ..."
    git rebase -n origin/master

    if [[ ! -z "${stash}" ]]; then
        print "git stash pop ..."
        git stash pop
    fi
}

set -e

pushd "$(dirname "$0")/.." 1> /dev/null

if [[ -z "${1}" ]]; then
    print "========= DOTFILES ========="
    pull

    if [[ -d "ssh" ]]; then
        pushd "ssh" 1> /dev/null
        print "============ SSH ==========="
        pull
        popd 1> /dev/null
    fi
fi

print "./bootstrap.sh ..."
./bootstrap.sh

popd 1> /dev/null

exit 0
