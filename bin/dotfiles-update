#!/bin/bash -e

source "$(dirname "$0")/../load-variables.sh"
source "${DOTFILES_ROOT}/util/script-functions.sh"

indent() {
    while IFS= read -r line; do
        printf "   ==> %s\n" "${line}"
    done < <($@ 2>&1)
}

pull() {
    info "git fetch --prune ..."
    indent git fetch --prune

    if [[ $(git rev-parse --abbrev-ref HEAD) != "master" ]]; then
        info "git checkout master ..."
        indent git checkout master
    fi

    if [[ $(git diff --name-only) != "" ]]; then
        local stash=true
        info "git stash ..."
        indent git stash
    fi

    info "git rebase -n origin/master ..."
    indent git rebase -n origin/master

    if [[ ! -z "${stash}" ]]; then
        info "git stash pop ..."
        indent git -c color.status=always stash pop
    fi
}

pushd "${DOTFILES_ROOT}" 1> /dev/null

if [[ -z "${1}" ]]; then
    info "========= DOTFILES ========="
    pull

    if [[ -d "ssh" ]]; then
        pushd "ssh" 1> /dev/null
        echo
        info "============ SSH ==========="
        pull
        popd 1> /dev/null
    fi
fi

echo
info "========= BOOTSTRAP ========"
indent ./bootstrap.sh

popd 1> /dev/null

exit 0
